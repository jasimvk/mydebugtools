{
  "name": "mydebugtools",
  "version": "1.0.0",
  "description": "A comprehensive debugging toolkit for developers",
  "scripts": {
    "build": "npm run clean && npm run copy && npm run zip",
    "clean": "rm -rf dist",
    "copy": "mkdir -p dist && cp -r chrome-extension/* dist/",
    "zip": "cd dist && zip -r ../mydebugtools.zip . -x \"*.DS_Store\" -x \"*.git*\"",
    "watch": "nodemon --watch chrome-extension --ext js,css,html,json --exec 'npm run build'"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "author": "",
  "license": "MIT"
}
